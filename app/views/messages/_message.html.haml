.message__box{"data-message-id":"#{message.id}"}
  .message__user
    = message.user.name
    .message__user__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
    .message__user__text
      - if message.content.present?
        %p.message__user__text__content
          = message.content
      = image_tag message.image.url, class: 'message__user__text__image' if message.image.present?